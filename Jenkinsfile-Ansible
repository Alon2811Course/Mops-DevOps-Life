pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('checkout'){
            steps {
                cleanWs()
                script {
                    git credentialsId: 'devopint', url: 'https://github.com/JohnMops/Mops-DevOps-Life/'
                }
            }
        }
        stage('Ansible Playbook') {
             targetIP = input{
                message 'Enter Host'
                    id 'Host'
                    ok 'OK'
                    parameters {
                        string defaultValue: 'Host', description: '', name: 'HOST', trim: false
                    }
             }
                
            steps {
                dir ('Ansible-Project/mops'{
                script { 
                    //sh "ansible-playbook -i hosts  -u ubuntu -b --private-key=/var/jenkins_home/ansible/my.pem Ansible-Project/mops/roles/conf/tasks/main.yml"
                    sh "sed -i 's/HOST_IP/${targetIP}/g' hosts"
                    sh 'cat hosts'
                    //sh "ansible-playbook -i hosts  -u ubuntu -b --private-key=/var/jenkins_home/ansible/my.pem Ansible-Project/mops/playbook.yml"
                    
                }
            }
          } 
        }
    }
}

           
                
