pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('checkout'){
            steps {
                cleanWs()
                script {
                    git credentialsId: 'devopint', url: 'https://github.com/JohnMops/Mops-DevOps-Life'
                    sh 'ls'
                    sh 'cd Ansible-Project/mops'
                }
            }
        }
        stage('Ansible Playbook') {
             input{
                message 'Enter Host'
                    id 'Host'
                    ok 'OK'
                    parameters {
                        string defaultValue: 'Host', description: '', name: 'HOST', trim: false
                    }
             }
                
            steps {
                script {
                    sh 'cd %WORKSPACE%'
                    sh "pwd"
                    sh 'ls'
                    sh "echo $HOST >> hosts"
                    sh "ansible-playbook -i hosts  -u ubuntu -b --private-key=/var/jenkins_home/ansible/my.pem Ansible-Project/mops/playbook.yaml"
                    sh 'rm hosts'
                }
            }
        }
    }
}
