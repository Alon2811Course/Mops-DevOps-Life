pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('checkout'){
            steps {
                deleteDir()
                script {
                    git credentialsId: 'devopint', url: 'https://github.com/JohnMops/Mops-DevOps-Life/'
                }
            }
        }
        stage('Ansible Playbook') {
            steps {
                dir ('New-Project/'){
                script {
                targetIP = input(
                            id: 'userInput', message: 'ip add',
                            parameters: [
                                string(defaultValue: '0.0.0.0',
                                       description: 'ip address',
                                       name: 'IP')])
                 role = input {
                     message 'Choose Role'
                     ok 'Proceed'
                     parameters {
                     choice choices: ['Docker', 'ES', 'Config', 'Web', 'DB', 'Jenkins'], description: '', name: 'Role'
  }
}

                    sh "sed -i 's/host/${targetIP}/g' hosts"
                    sh 'cat hosts'
                    sh 'cat group_vars/all'
                    sh "ansible-playbook -i hosts  -u ubuntu -b  --private-key=/var/jenkins_home/ansible/my.pem roles/Configure/tasks/main.yml"
                    sh "ansible-playbook -i hosts  -u ubuntu -b  --private-key=/var/jenkins_home/ansible/my.pem playbook.yml"

                }
            }

        }
    }
}
}
